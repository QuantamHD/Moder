<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    
    <RelativeLayout 
        android:background="@color/mainColor"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:text="Profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/background" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:onClick="backToMain"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:text="@string/profile_greeting"
        android:textColor="@color/accentColor"
        android:id="@+id/welcome"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="21dp"
        />

    <View
        android:id="@+id/hrTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="21dp"
        android:background="@color/accentColor"
        android:layout_below="@+id/welcome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:text="@string/ribbons_collected"
        android:textColor="@color/accentColor"
        android:id="@+id/photos"
        android:layout_below="@+id/hrTop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:text="@string/cards_rated"
        android:textColor="@color/accentColor"
        android:id="@+id/textView"
        android:layout_below="@+id/photos"
        android:layout_alignLeft="@+id/photos"
        android:layout_alignStart="@+id/photos" />

</RelativeLayout>
