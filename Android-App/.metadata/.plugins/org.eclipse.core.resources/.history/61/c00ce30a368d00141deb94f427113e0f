/**
 * Grabs photos from a URL. Currently can only do one photo at a time.
 * @author Evan
 * @date December 26th, 2014
 */

package com.moderco.network;

import java.io.InputStream;
import java.net.URL;

import android.graphics.drawable.Drawable;
import android.os.AsyncTask;

public class GetPhotosTask extends AsyncTask<String, Void, Drawable>{

	@Override
	protected Drawable doInBackground(String... params) {
		try {
			InputStream is = (InputStream) new URL(params[0]).getContent(); //Currently can only take in one photo.
            Drawable d = Drawable.createFromStream(is, "src name");
            return d;
        } catch (Exception e) {
            return null;
        }
	}

}
