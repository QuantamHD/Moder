package com.moderco.network;

import java.io.File;
import java.io.FileNotFoundException;

import com.loopj.android.http.AsyncHttpClient;
import com.loopj.android.http.AsyncHttpResponseHandler;
import com.loopj.android.http.RequestParams;

public class PostPhotosTask extends AsyncHttpClient{
	
	private RequestParams params;
	
	PostPhotosTask(File file) {
		params = new RequestParams();
		try{
			params.put("file", file);
		} catch(FileNotFoundException e) {
			e.printStackTrace();
		}
	}
	
	public void post(AsyncHttpResponseHandler responseHandler) {
		this.post(URLS.SUBMIT_PHOTO_URL_STRING, params,  responseHandler);
	}
}
